<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="220dp"
    android:layout_margin="10dp"
    android:background="@drawable/mdialog_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tips_dialog_text_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="namexxxx"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="100dp"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tips_dialog_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="descxxxxxx"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/tips_dialog_button_ok1"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:background="@null"
            android:text="ok"/>
        <View
            android:id="@+id/tips_dialog_view_ok1"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey"/>
        <Button
            android:id="@+id/tips_dialog_button_ok2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@null"
            android:text="ok"/>
        <View
            android:id="@+id/tips_dialog_view_ok2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey"/>
        <Button
            android:id="@+id/tips_dialog_button_ok3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="ok"/>
    </LinearLayout>

</LinearLayout>