<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/set_slot_include_listview_item_relative_add"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageButton
            android:id="@+id/set_slot_include_listview_item_imagebtn_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_add"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/set_slot_include_listview_item_linear_content"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/set_slot_include_listview_item_image_icon"
            android:layout_margin="5dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@mipmap/ic_launcher"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/set_slot_include_listview_item_text_slot"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slot:1"/>
                <TextView
                    android:id="@+id/set_slot_include_listview_item_text_time"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20170812:202020"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/set_slot_include_listview_item_btn_start"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:background="@mipmap/icon_run"/>
                <ImageButton
                    android:id="@+id/set_slot_include_listview_item_btn_delete"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/icon_delete"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>